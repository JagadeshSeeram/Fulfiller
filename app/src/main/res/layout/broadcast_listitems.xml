<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <com.biglynx.fulfiller.fonts.CustomFontBold
                android:id="@+id/retailer_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:maxLines="2"
                android:padding="5dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontBold>

            <com.biglynx.fulfiller.fonts.CustomFontMedium
                android:id="@+id/store_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:text="Store"
                android:textColor="@color/header_color"
                android:textSize="@dimen/sp_12"></com.biglynx.fulfiller.fonts.CustomFontMedium>

            <com.biglynx.fulfiller.fonts.CustomFontMedium
                android:id="@+id/warehouse_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="5dp"
                android:gravity="center|start"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:text="Ware house"
                android:textColor="@color/header_color"
                android:textSize="@dimen/sp_12"></com.biglynx.fulfiller.fonts.CustomFontMedium>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:gravity="end"
            android:orientation="vertical">


            <com.biglynx.fulfiller.fonts.CustomFontMedium
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|end"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:text="Addres"
                android:textColor="@color/header_color"
                android:textSize="@dimen/sp_12"></com.biglynx.fulfiller.fonts.CustomFontMedium>

            <com.biglynx.fulfiller.fonts.CustomFontBold
                android:id="@+id/distance_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="5dp"
                android:gravity="center|end"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:text="Distance"
                android:textColor="@color/header_color"
                android:textSize="@dimen/sp_12"></com.biglynx.fulfiller.fonts.CustomFontBold>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/broacast_viewpager"
            android:layout_width="match_parent"
            android:layout_height="80dp"></android.support.v4.view.ViewPager>

        <RelativeLayout
            android:id="@+id/viewPagerIndicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp"
            android:gravity="bottom">

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:ci_drawable="@drawable/selecteditem_dot"
                app:ci_drawable_unselected="@drawable/nonselecteditem_dot" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>