<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#DADADA"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:paddingLeft="120dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.biglynx.fulfiller.fonts.CustomFontBold
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="test name"
                    android:letterSpacing="0.05"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_14">

                </com.biglynx.fulfiller.fonts.CustomFontBold>

                <com.biglynx.fulfiller.fonts.CustomFontRegular
                    android:id="@+id/customFontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginBottom="5dp"
                    android:gravity="center|start|bottom"
                    android:text="Status: Activte"
                    android:textSize="@dimen/sp_13">

                </com.biglynx.fulfiller.fonts.CustomFontRegular>

            </LinearLayout>

            <ImageView
                android:id="@+id/editProfile_iv"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="0.2"
                android:layout_marginBottom="@dimen/spacing_small"
                android:src="@drawable/edit_icon_whites" />
        </LinearLayout>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_imv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:civ_border_width="2dp" />
    </RelativeLayout>

    <!--header finished-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vehicles_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_vehicl"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Vehicles"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/settings_seperator_color"
                    android:padding="6dp"></View>

                <LinearLayout
                    android:id="@+id/notification_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/warehouse_proximity_ics"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Notificatoin approximity"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/payments_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/documents_ics"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Payments"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/settings_seperator_color"
                    android:padding="6dp"></View>

                <LinearLayout
                    android:id="@+id/rating_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/payment"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:id="@+id/customFontMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="review &amp; ratings"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/terms_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/terms_of_services"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:id="@+id/terms_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Terms of Services"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/settings_seperator_color"
                    android:padding="6dp"></View>

                <LinearLayout
                    android:id="@+id/policy_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/privacy_policys"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="Privacy policy"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/settings_seperator_color"
                    android:padding="6dp"></View>

                <LinearLayout
                    android:id="@+id/cservices_LI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/customer_services"
                        android:visibility="visible"></ImageView>

                    <com.biglynx.fulfiller.fonts.CustomFontMedium
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight="0.8"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="customer services"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="@dimen/sp_13"></com.biglynx.fulfiller.fonts.CustomFontMedium>


                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow"
                        android:visibility="visible"></ImageView>

                </LinearLayout>
            </LinearLayout>


            <com.biglynx.fulfiller.fonts.CustomFontMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logout_LI"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:padding="12dp"
                android:text="Logout"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sign_in_button_bg"
                android:orientation="horizontal"
                >
            </com.biglynx.fulfiller.fonts.CustomFontMedium>
        </LinearLayout>
    </ScrollView>

</LinearLayout>