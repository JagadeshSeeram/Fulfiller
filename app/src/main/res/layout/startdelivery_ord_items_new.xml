<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        >
        <com.biglynx.fulfiller.fonts.CustomFontBold
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:textAllCaps="true"
            android:text="state"
            android:paddingRight="@dimen/dp_3"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_dp14">
        </com.biglynx.fulfiller.fonts.CustomFontBold>

        <com.biglynx.fulfiller.fonts.CustomFontMedium
            android:id="@+id/phoneno_tv"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:paddingRight="@dimen/dp_3"
            android:text="080-125-1548"
            android:textColor="#787878"
            android:textSize="@dimen/textview_dp14">
        </com.biglynx.fulfiller.fonts.CustomFontMedium>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="28dp"
            android:background="@drawable/ef_border"
            android:id="@+id/layout_spinner_status"
            android:layout_gravity="end"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:id="@+id/spinner"
                android:background="@drawable/ef_border"
                >
            </Spinner>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/spinner_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/down_arrows_black" />
        </RelativeLayout>
    </LinearLayout>
    <com.biglynx.fulfiller.fonts.CustomFontRegular
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/ef_border"
        android:text="address jsfhffh sfhfdf
sfhsbfhbhbjsbhbhbhdb"
        android:textColor="#787878"
        android:layout_centerVertical="true"
        android:maxLines="3"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="3dp"
        android:textSize="11sp"
        >
    </com.biglynx.fulfiller.fonts.CustomFontRegular>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <com.biglynx.fulfiller.fonts.CustomFontBold
            android:id="@+id/copy_tv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#787878"
            android:layout_marginRight="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="@dimen/dp_3"
            android:text="Copy"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_13"
            >
        </com.biglynx.fulfiller.fonts.CustomFontBold>
        <com.biglynx.fulfiller.fonts.CustomFontBold
            android:id="@+id/openinmap_tv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="@dimen/dp_3"
            android:background="#787878"
            android:text="Open in maps"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_13"
            >
        </com.biglynx.fulfiller.fonts.CustomFontBold>
    </LinearLayout>
</LinearLayout>